<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileDoctor" >

    <TextView
        android:id="@+id/doc_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vr_margin"
        android:ems="10" />

    <Spinner
        android:id="@+id/doc_branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vr_margin"
        android:entries="@array/specialty" />

    <EditText
        android:id="@+id/doc_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_branch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vr_margin"
        android:ems="10"
        android:hint="Your Phone No"
        android:inputType="phone" />

    <EditText
        android:id="@+id/doc_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_phone"
        android:layout_marginTop="@dimen/vr_margin"
        android:ems="10"
        android:hint="Your Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/doc_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vr_margin"
        android:ems="10"
        android:hint="Your Address"
        android:inputType="textPostalAddress" />

    <LinearLayout
        android:id="@+id/doc_buttonz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doc_address"
        android:layout_marginTop="@dimen/vr_margin"
        android:orientation="horizontal"
        android:padding="@dimen/h_margin" >

        <Button
            android:id="@+id/clearCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Clear" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Update" />
    </LinearLayout>

</RelativeLayout>